                    {
                        if (@item.imgQR == null)
                        {
                            <div class="row" style="margin-bottom:10px">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <h4>Hình ảnh</h4>
                                    <img style="width:80%" src="@item.imgPath" />
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <h4>@item.nameProduct</h4>
                                    <p>
                                        @item.details
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row" style="margin-bottom:10px">
                                <div class="col-lg-5 col-md-4 col-sm-12">
                                    <h4>Hình ảnh</h4>
                                    <img style="width:80%" src="@item.imgPath" />
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    <h4>@item.nameProduct</h4>
                                    <p>
                                        @item.details
                                    </p>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <h4>Quét mã</h4>
                                    <img style="width:80%" src="\imgQR\test\NAMDONGCO01.png" />
                                </div>
                            </div>
                        }

                    }
                </div>
                <div>
                    <div class="section-tittle">
                        <h3 style="text-align: center;">Công ty L'ang Farm</h3>
                    </div>
                    @foreach (var item in ViewBag.langfarm)
                    {
                        if (@item.imgQR == null)
                        {
                            <div class="row" style="margin-bottom:10px">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <h4>Hình ảnh</h4>
                                    <img style="width:80%" src="@item.imgPath" />
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <h4>@item.nameProduct</h4>
                                    <p>
                                        @item.details
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row" style="margin-bottom:10px">
                                <div class="col-lg-5 col-md-4 col-sm-12">
                                    <h4>Hình ảnh</h4>
                                    <img style="width:80%" src="@item.imgPath" />
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    <h4>@item.nameProduct</h4>
                                    <p>
                                        @item.details
                                    </p>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <h4>Quét mã</h4>
                                    <img style="width:80%" src="@item.imgQR" />
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- Section Tittle -->
            <div class="col-lg-12 col-md-12">
                <div class="section-tittle">
                    <h2 style="text-align: center;"><a href="https://www.bigchaindb.com/features/" target="_blank">Điểm nổi bật của BigchainDB</a></h2>
                </div>
                <p>
                    BigchainDB là sự kết hợp giữa công nghệ Blockchain (tính phi tập trung, tính bất biến và tài sản do chủ sở hữu kiểm soát)
                    với cơ sở dữ liệu (tốc độ giao dịch cao, độ trễ thấp, lập chỉ mục và truy vấn dữ liệu có cấu trúc).
                </p>
            </div>
