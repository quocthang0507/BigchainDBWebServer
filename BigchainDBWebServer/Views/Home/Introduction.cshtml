
@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bảng so sánh BigchainDB -->
<section class="best-features-area">
    <div class="container">
        <div class="col-lg-12 table-responsive" style="top: 100px;">
            <div class="col-12">
                <div class="section-tittle">
                    <h2 style="text-align: center;">Những nơi đã áp dụng</h2>
                </div>
                <div>
                    <div class="section-tittle">
                        <h3 style="text-align: center;">Trường Đại học Đà Lạt</h3>
                    </div>
